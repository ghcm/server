
<% if (user)  { %>
<% block('title', 'Администратор ' + user.username ); -%>
<% } %>
<% layout('layout/layout') -%>


<% console.log(typeof error); %>


    <% if (typeof error != "undefined") {%>
        <div class="alert alert-danger">

        <%- error  %>
        <br/>

        </div>

    <% } else if (typeof message != "undefined") { %>
    <div class="alert alert-success"><%- message %></div>


    <% } %>


<form class="form-horizontal well" method="POST" action="/edit_department/<%- department.name %>" name="addUserForm">

    <div class="row">
        <div class="col-lg-10">

            <fieldset>
                <legend>Введите название раздела (на английском и русском)</legend>
                <div class="form-group">
                    <label class="col-lg-2 control-label" for="companyname">Название (англ.)</label>
                    <div class="col-lg-10">
                        <input class="form-control" name="department_title" type="text" placeholder="Название на английском" required="" autofocus="" value="<%- department.name %>">
                    </div>
                </div>
            </fieldset>


            <div class="form-group">
                <label class="col-lg-2 control-label" for="companyname">Название (рус.)</label>
                <div class="col-lg-10">
                    <input class="form-control" name="department_title_rus" type="text" placeholder="Название на русском" required="" autofocus="" value="<%- department.rusname %>">
                </div>
            </div>


        </div>
    </div>
    <div class="row">
        <div class="col-lg-10">
            <input type="submit" class="btn btn-primary pull-right btn-lg" value="Сохранить">
        </div>
    </div>

    <input type="hidden" value="<%- department._id %>" name="objectId"/>

</form>

