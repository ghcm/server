<form method="post" id="uploadForm" enctype="multipart/form-data"  enctype="multipart/form-data" action="/edit_company/<%- company._id %>" method="post">



    <div class="row">
        <div class="col-lg-4 col-xs-4" >
            <img class="img-thumbnail" src="<%- filePathView %><%- company.image %>" alt="" style="max-height: 300px; max-width: 300px">
        </div>

        <div class="col-lg-8 col-xs-8" >
            <strong><%= l("labels").imageLoad %></strong><br>
            <input type="file" name="file" id="userPhotoInput">
        </div>
    </div>
    <br/><br/>


    <div class="form-group">
        <label><strong><%= l("labels").enterTitle %></strong></label>
        <input class="form-control" type="text" name="name" value="<%- company.name %>">
    </div>


    <div class="form-group">
        <label><strong><%= l("labels").selectDepart %></strong></label>
        <div>
            <select name="departId">
                <% for (var i = 0; i < departs.length; i++) { %>
                <% if (departs[i]._id == company.department.toString()) { %>
                <option value="<%- departs[i]._id %>" selected> <%- departs[i].name %></option>
                <% } else { %>
                <option value="<%- departs[i]._id %>"> <%- departs[i].name %></option>
                <% }  %>
                <% } %>
            </select>
        </div>
    </div>

    <input type="hidden" value="<%- company._id %>" name="objectId"/>


    <div class="form-group">
        <label><strong><%= l("labels").enterShortDes %></strong></label>
        <input class="form-control" type="text" name="snippet" value="<%- company.snippet %>">

