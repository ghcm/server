<% if (user)  { %>
<% block('title', 'Администратор ' + user.username ); -%>
<% } %>
<% layout('../layout/layout') -%>


<% for (var i in companies) { %>


<div class="widget">

<div class="widget-head">
    <div class="pull-left"><%- i %></div>
    <div class="widget-icons pull-right">
        <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
        <a href="#" class="wclose"><i class="icon-remove"></i></a>
    </div>
    <div class="clearfix"></div>
</div>

<div class="widget-content" style="display: block;">

<table class="table table-striped table-bordered table-hover">
<thead>
<tr>
    <th>#</th>
    <th class="text-center">Изображение</th>
    <th class="text-center">Название</th>
    <th class="text-center">Цена доставки</th>
    <th class="text-center">Мин. цена блюда</th>
    <th class="text-center">Управление</th>
</tr>
</thead>
<tbody>

<% for (var j = 0; j < companies[i].length; j++) { %>

<tr>
    <td>1</td>
    <td class="text-center"><a href="/show_company/<%- companies[i][j].name %>"><img src="<%- filePathView %><%- companies[i][j].image %>" alt="" style="max-height: 50px; max-width: 50px"></a></td>
    <td class="text-center"><%- companies[i][j].name %></td>
    <td class="text-center"></td>
    <td class="text-center"></td>

    <td class="text-center">
        <a href="edit_company/<%- companies[i][j].name %>" class="btn btn-xs btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>

    </td>
</tr>

<% } %>



</tbody>
</table>

<div class="widget-foot">

    <!-- PAGINATION -->
    <!--  <ul class="pagination pull-right">
          <li><a href="#">Prev</a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">Next</a></li>
      </ul>-->

    <div class="clearfix"></div>

</div>

</div>

</div>

<% } %>
