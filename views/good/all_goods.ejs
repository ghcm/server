<% if (user)  { %>
<% block('title', 'Администратор ' + user.username ); -%>
<% } %>
<% layout('../layout/layout') -%>



<% for (var i in goods) { %>

<div class="widget">

<div class="widget-head">
    <div class="pull-left"><%- i %></div>
    <div class="widget-icons pull-right">
        <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
        <a href="#" class="wclose"><i class="icon-remove"></i></a>
    </div>
    <div class="clearfix"></div>
</div>

<div class="widget-content" style="display: block;">

<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>#</th>
        <th class="text-center"><%= l('alls').image %></th>
        <th class="text-center"><%= l('alls').title %></th>
        <th class="text-center"><%= l('alls').orderCount %></th>
        <th class="text-center"><%= l('alls').price %></th>
        <th class="text-center"><%= l('alls').manage %></th>
    </tr>
    </thead>
<tbody>



<% for (var j = 0; j < goods[i].length; j++) { %>


<tr>
    <td><%- j %></td>
    <td class="text-center"><a href="/show_good/<%- goods[i][j]._id %>"><img src="<%- filePathView %><%- goods[i][j].image %>" alt="" style="max-height: 50px; max-width: 50px"></a></td>
    <td class="text-center"><%- goods[i][j].name %></td>
    <td class="text-center"></td>
    <td class="text-center"><%- goods[i][j].price %></td>

    <td class="text-center">
        <a href="edit_good/<%- goods[i][j]._id %>" class="btn btn-xs btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>

        <button action="del_goods" thisid="<%- goods[i][j]._id %>" class="btn btn-xs btn-danger"><i class="glyphicon glyphicon-remove"></i></button>
    </td>
</tr>



<% } %>

</tbody>
</table>

<div class="widget-foot">

    <!-- PAGINATION -->
    <!--  <ul class="pagination pull-right">
          <li><a href="#">Prev</a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">Next</a></li>
      </ul>-->

    <div class="clearfix"></div>

</div>

</div>

</div>
<% } %>






